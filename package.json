{
  "name": "npmscriptsstarter",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "nodemonConfig": {
    "events": {
      "start": "nodeMonNowIs=$(date +\"%T\") && echo Current Time: $nodeMonNowIs",
      "crash": "osascript -e 'display notification \"Something Broke\" with title \"npmScriptsStarter\"'"
    }
  },
  "watch": {
    "sass": {
      "patterns": [
        "sass",
        "scss"
      ],
      "extensions": "scss"
    },
    "img": {
      "patterns": [
        "images"
      ],
      "extensions": [
        "jpg",
        "png"
      ]
    },
    "js": "js/**",
    "build": {
      "patterns": [
        "pages",
        "templates"
      ],
      "extensions": "hbs, md"
    }
  },
  "scripts": {
    "addUpdate": "node newUpdate",
    "sass": "node-sass sass/main.scss build/css/styles.css",
    "sass:prod": "node-sass --output-style=compressed sass/main.scss build/css/styles.css",
    "js": "esbuild js/app.js --bundle --sourcemap  --minify --outfile=build/js/app.js",
    "js:prod": "esbuild js/app.js --bundle --minify --outfile=build/js/app.js",
    "img": "cp -r images/ build/img/",
    "clean": "rm -r build/",
    "preview": "live-server --no-browser --open=build/ --watch=build/ --mount=/:build/ --ignore=**/*tmp-browserify*",
    "build": "run-s myEleventy:standard",
    "myEleventy:debug": "DEBUG=Eleventy* npx eleventy",
    "myEleventy:standard": "npx eleventy --quiet",
    "watch": "npm-watch",
    "predev": "mkdir -p build && run-p sass js img build",
    "dev": "run-p preview watch",
    "produce": "mkdir -p build && run-p sass:prod js:prod img build"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^1.0.2",
    "@11ty/eleventy-plugin-rss": "^1.2.0",
    "esbuild": "^0.17.5",
    "gulp-extname": "^0.2.2",
    "live-server": "^1.2.2",
    "moment": "^2.29.4",
    "node-sass": "^8.0.0",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.11.0",
    "prompt": "^1.3.0"
  },
  "dependencies": {
    "moment-timezone": "^0.5.40"
  }
}
