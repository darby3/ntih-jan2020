<!doctype html>
<html class="no-js" lang="">
<head>
    {{> head }}
</head>
<body>

{{> topbar }}

<header>
    <h1>{{ title }}
        {{#each tags}}
            {{#if (checkDraft this)}}
                <span class="h1-draft">(Draft Post)</span>
            {{/if }}
        {{/each}}
    </h1>
    <p class="italicDate"><time datetime="{{ page.date }}">{{ myIshyDate page.date }}</time></p>
</header>

<div class="post">
    {{{ content }}}
</div>

<h2>tags</h2>
<ul>
    {{#each tags}}
        <li>{{ this }}</li>
    {{/each}}
</ul>

{{> bottombar }}

<script src="./js/app.js" type="module"></script>

</body>
</html>
